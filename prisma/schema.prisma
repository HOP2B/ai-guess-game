generator client {
  provider = "prisma-client"
  output   = "../app/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int    @id @default(autoincrement())
  username        String @unique
  score           Int    @default(0)
  winRate         Float? @default(0)
  favoriteThemeId Int?
  favoriteTheme   Theme? @relation(fields: [favoriteThemeId], references: [id])
  games           Game[]
}

model Theme {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imageUrl   String?
  characters Character[]
  games      Game[]
  users      User[]
}

model Character {
  id             Int             @id @default(autoincrement())
  name           String
  imageUrl       String
  points         Int             @default(10)
  themeId        Int
  theme          Theme           @relation(fields: [themeId], references: [id])
  forbiddenWords ForbiddenWord[]
  gameCharacters GameCharacter[]
}

model Game {
  id             Int             @id @default(autoincrement())
  status         String
  themeId        Int
  userId         Int
  theme          Theme           @relation(fields: [themeId], references: [id])
  user           User            @relation(fields: [userId], references: [id])
  gameCharacters GameCharacter[]
}

model GameCharacter {
  id          Int       @id @default(autoincrement())
  gameId      Int
  characterId Int
  guessed     Boolean   @default(false)
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  game        Game      @relation(fields: [gameId], references: [id])

  @@unique([gameId, characterId])
}

model ForbiddenWord {
  id          Int       @id @default(autoincrement())
  word        String
  characterId Int
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([word, characterId])
}
