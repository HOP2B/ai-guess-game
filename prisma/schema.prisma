generator client {
  provider = "prisma-client"
  output   = "../app/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  score    Int    @default(0)
  games    Game[]
}

model Theme {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imageUrl   String?
  characters Character[]
  games      Game[]
}

model Character {
  id             Int             @id @default(autoincrement())
  name           String
  imageUrl       String
  points         Int             @default(10)
  themeId        Int
  theme          Theme           @relation(fields: [themeId], references: [id])
  gameCharacters GameCharacter[]
  forbiddenWords ForbiddenWord[]
}

model Game {
  id             Int             @id @default(autoincrement())
  userId         Int
  user           User            @relation(fields: [userId], references: [id])
  themeId        Int
  theme          Theme           @relation(fields: [themeId], references: [id])
  status         String
  gameCharacters GameCharacter[]
}

model GameCharacter {
  id          Int       @id @default(autoincrement())
  gameId      Int
  game        Game      @relation(fields: [gameId], references: [id])
  characterId Int
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  guessed     Boolean   @default(false)

  @@unique([gameId, characterId])
}

model ForbiddenWord {
  id          Int       @id @default(autoincrement())
  word        String
  characterId Int
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([word, characterId])
}
